<%- include ("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to MSRIT BLOG APP</h1>
            <p>View all blogs posted from our college</p>
            <p><a class="btn btn-primary btn-lg" href="/Blogs/new">Write New Blog</a></p>
        </div>
    </header>
</div>

<div class="ui main text container">
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="ui tiny image">
                        <% if(!blog.image) {%>
                            <img src="https://webmaster.ypsa.org/wp-content/uploads/2012/08/no_thumb.jpg">
                        <% }else { %>
                            <img src="<%= blog.image %>" id="blogImg">
                        <% } %>
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <p><i>Submitted by <%= blog.author.username %></i></p>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.description.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="mini ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>    
                </div>
            <% }) %>              
        </div>
    </div>
</div>


<%- include ("../partials/footer") %>

