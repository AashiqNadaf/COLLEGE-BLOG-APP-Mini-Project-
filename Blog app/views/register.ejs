<%- include ("./partials/header") %>
    <script>
        alert("Contact HOD for User-code and Admin-code")
    </script>
    <div class="ui main text container segment">
        <div class="ui huge header">New User Registration</div>
        <form action="/register" method="POST">
            <div class="form-group">
                <label>First name</label>
                <input class="form-control" type="text" name="firstName">
            </div>
            <div class="form-group">
                <label>Last name</label>
                <input class="form-control" type="text" name="lastName">
            </div>
            <div class="form-group">
                <label>User name</label>
                <input class="form-control" type="text" name="username">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="email" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="text" name="password">
            </div>
            <div class="form-group">
                <label>Admin code</label>
                <input class="form-control" type="text" name="adminCode">
            </div>
            <div class="form-group">
                <label>User code</label>
                <input class="form-control" type="text" name="userCode" required>
            </div>
            <input class="ui violet big basic button" type="submit" value="Submit">
        
        </form>
    </div>
<%- include ("./partials/footer") %>