<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Post a New Event</h1>
		<div style="width: 70%; margin: 25px auto;">
			<form action="/events" method="POST">
				<div class="form-group">
					<label>Title</label>
					<input class="form-control" type="text" name="title" placeholder="Title">
				</div>
				<div class="form-group">
					<label>Event Date</label>
					<input class="form-control" type="text" name="date" placeholder="DD-MM-YYYY">
				</div>
				<div class="form-group">
					<label>Display Image</label>
					<input class="form-control" type="text" name="image1" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 2</label>
					<input class="form-control" type="text" name="image2" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 3</label>
					<input class="form-control" type="text" name="image3" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 4</label>
					<input class="form-control" type="text" name="image4" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 5</label>
					<input class="form-control" type="text" name="image5" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 6</label>
					<input class="form-control" type="text" name="image6" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 7</label>
					<input class="form-control" type="text" name="image7" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 8</label>
					<input class="form-control" type="text" name="image8" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 9</label>
					<input class="form-control" type="text" name="image9" placeholder="img url">
                </div>
                <div class="form-group">
					<label>Image 10</label>
					<input class="form-control" type="text" name="image10" placeholder="img url">
                </div>
				<div class="field">
                    <label>Event Content</label>
                    <textarea class="form-control" rows="10" name="description"></textarea>
                </div>
				<div class="form-group" style="padding-top: 10px;">
					<button class="btn btn-lg btn-primary btn-block">Post</button>
				</div>
				</form>
			<a href="/events">Go back</a>
		</div>
		
	</div>
</div>


<%- include ("../partials/footer") %>