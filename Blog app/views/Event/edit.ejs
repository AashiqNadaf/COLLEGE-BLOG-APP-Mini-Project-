<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Event</h1>
		<div style="width: 70%; margin: 25px auto;">
			<form action="/events/<%= event._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Title</label>
					<input class="form-control" type="text" name="event[title]" value="<%= event.title %>">
				</div>
				<div class="form-group">
					<label>Event Date</label>
					<input class="form-control" type="text" name="event[date]" value="<%= event.date %>">
				</div>
				<div class="form-group">
					<label>Display Image</label><div style="float: right;"><a href="/imgInfo">how to upload image</a></div>
					<input class="form-control" type="text" name="event[image1]" value="<%= event.image1 %>">
                </div>
                <div class="form-group">
					<label>Image 2</label>
					<input class="form-control" type="text" name="event[image2]" value="<%= event.image2 %>">
                </div>
                <div class="form-group">
					<label>Image 3</label>
					<input class="form-control" type="text" name="event[image3]" value="<%= event.image3 %>">
                </div>
                <div class="form-group">
					<label>Image 4</label>
					<input class="form-control" type="text" name="event[image4]" value="<%= event.image4 %>">
                </div>
                <div class="form-group">
					<label>Image 5</label>
					<input class="form-control" type="text" name="event[image5]" value="<%= event.image5 %>">
                </div>
                <div class="form-group">
					<label>Image 6</label>
					<input class="form-control" type="text" name="event[image6]" value="<%= event.image6 %>">
                </div>
                <div class="form-group">
					<label>Image 7</label>
					<input class="form-control" type="text" name="event[image7]" value="<%= event.image7 %>">
                </div>
                <div class="form-group">
					<label>Image 8</label>
					<input class="form-control" type="text" name="event[image8]" value="<%= event.image8 %>">
				</div><div class="form-group">
					<label>Image 9</label>
					<input class="form-control" type="text" name="event[image9]" value="<%= event.image9 %>">
                </div>
                <div class="form-group">
					<label>Image 10</label>
					<input class="form-control" type="text" name="event[image10]" value="<%= event.image10 %>">
                </div>
				<div class="field">
                    <label>Event Content</label>
                    <textarea class="form-control" rows="10" name="event[description]"><%= event.description %></textarea>
                </div>
				<div class="form-group" style="padding-top: 10px;">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				</form>
			<a href="/events">Go back</a>
		</div>
		
	</div>
</div>


<%- include ("../partials/footer") %>