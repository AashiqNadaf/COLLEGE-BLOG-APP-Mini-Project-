<%- include ("../partials/header") %>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="thumbnail">
                    <% if(!job.image) {%>
                        <img src="https://webmaster.ypsa.org/wp-content/uploads/2012/08/no_thumb.jpg">
                    <% }else { %>
                        <img style="height: 500px; width: 500px;" class="img-responsive" src="<%= job.image %>" id="blogImg">
                    <% } %>
                    <div class="caption-full">
                        <h4><a><%=  job.company %></a></h4>
                        <p><i>Submitted by <%= job.author.username %></i></p>
                        <p><b><i>Placement Date <%= job.date %></i></b></p>
                        <label>Placement Requirement</label>
                        <p><%- job.reqr %></p>
                        <label>Placement Description</label>
                        <p><%- job.description %></p>
                        <% if(currentUser && job.author.id.equals(currentUser._id)|| currentUser && currentUser.isAdmin){ %>
                            <a href="/jobs/<%= job._id %>/edit" class="btn btn-warning btn-xs">Edit</a>
                            <form id="deleteForm" action="/jobs/<%= job._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-xs">DELETE</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <a href="/jobs">Back to previous page</a>
    </div>
<%- include ("../partials/footer") %>

