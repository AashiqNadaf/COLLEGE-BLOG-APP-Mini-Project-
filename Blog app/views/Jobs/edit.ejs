<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Details</h1>
		<div style="width: 70%; margin: 25px auto;">
			<form action="/jobs/<%= job._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Company Name</label>
					<input class="form-control" type="text" name="job[company]" value="<%= job.company %>">
				</div>
				<div class="form-group">
					<label>Company Image Symbol</label><div style="float: right;"><a href="/imgInfo">how to upload image</a></div>
					<input class="form-control" type="text" name="job[image]" value="<%= job.image %>">
                </div>
                <div class="form-group">
					<label>Company Branch</label>
					<input class="form-control" type="text" name="job[branch]" value="<%= job.branch %>">
                </div>
                <div class="form-group">
					<label>Placement date</label>
					<input class="form-control" type="text" name="job[date]" value="<%= job.date %>">
                </div>
				<div class="field">
                    <label>Placement requirement</label>
                    <textarea class="form-control" rows="10" name="job[reqr]"><%= job.reqr %></textarea>
                </div>
                <div class="field">
                    <label>placement description</label>
                    <textarea class="form-control" rows="10" name="job[description]"><%= job.description %></textarea>
                </div>
				<div class="form-group" style="padding-top: 10px;">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				</form>
			<a href="/jobs">Go back</a>
		</div>
		
	</div>
</div>


<%- include ("../partials/footer") %>