<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Write a New Blog</h1>
		<div style="width: 70%; margin: 25px auto;">
			<form action="/jobs" method="POST">
				<div class="form-group">
					<label>Company Name</label>
					<input class="form-control" type="text" name="company" placeholder="Company name">
				</div>
				<div class="form-group">
					<label>Image of company symbol</label><div style="float: right;"><a href="/imgInfo">how to upload image</a></div>
					<input class="form-control" type="text" name="image" placeholder="img url">
                </div>
                <div class="field">
                    <label>Placement Branch</label>
					<input class="form-control" type="text" name="branch" placeholder="Placement branch">
                </div>
                <div class="field">
                    <label>Placement Date</label>
					<input class="form-control" type="text" name="date" placeholder="DD-MM-YYYY">
                </div>
                <div class="field">
                    <label>Placement Requirement</label>
                    <textarea class="form-control" rows="5" name="reqr"></textarea>
                </div>
				<div class="field">
                    <label>Placement Description</label>
                    <textarea class="form-control" rows="10" name="description"></textarea>
                </div>
				<div class="form-group" style="padding-top: 10px;">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				</form>
			<a href="/jobs">Go back</a>
		</div>
		
	</div>
</div>


<%- include ("../partials/footer") %>