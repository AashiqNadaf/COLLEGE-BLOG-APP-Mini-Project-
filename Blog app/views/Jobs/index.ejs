<%- include ("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to MSRIT JOB PLACEMENT DETAILS PAGE</h1>
            <p>View details of job placement here</p>
            <p><a class="btn btn-primary btn-lg" href="/Jobs/new">Post new Placement Details</a></p>
        </div>
    </header>
</div>

<div class="ui main text container">
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% jobs.forEach(function(job){ %>
                <div class="item">
                    <div class="ui tiny image">
                        <% if(!job.image) {%>
                            <img src="https://webmaster.ypsa.org/wp-content/uploads/2012/08/no_thumb.jpg">
                        <% }else { %>
                            <img src="<%= job.image %>" id="blogImg">
                        <% } %>
                    </div>
                    <div class="content">
                        <a class="header" href="/jobs/<%= job._id %>"><%= job.company %></a>
                        <p><i>Submitted by <%= job.author.username %></i></p>
                        <div class="meta">
                            <span><%= job.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- job.description.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="mini ui floated basic violet button" href="/jobs/<%= job._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>    
                </div>
            <% }) %>              
        </div>
    </div>
</div>


<%- include ("../partials/footer") %>

