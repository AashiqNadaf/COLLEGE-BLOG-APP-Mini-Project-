<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Update Student <%= foundStudent.firstName %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/user/<%= currentUser._id %>/students/edit/<%= foundStudent._id %>?_method=PUT" method="POST">
				<div class="form-group">
                    <label>First name of Student</label>
					<input class="form-control" type="text" name="student[firstName]" value="<%= foundStudent.firstName %>" required>
                </div>
                <div class="form-group">
                    <label>Last name of Student</label>
					<input class="form-control" type="text" name="student[lastName]" value="<%= foundStudent.lastName %>">
                </div>
                <div class="form-group">
                    <label>Father's name of Student</label>
					<input class="form-control" type="text" name="student[fatherName]" value="<%= foundStudent.fatherName %>">
                </div>
                <div class="form-group">
                    <label>Mother's name of Student</label>
					<input class="form-control" type="text" name="student[motherName]" value="<%= foundStudent.motherName %>">
                </div>
                <div class="form-group">
                    <label>Year of joining</label>
					<input class="form-control" type="text" name="student[yearOfJoining]" value="<%= foundStudent.yearOfJoining %>" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				</form>
			<a href="/user">Go back</a>
		</div>
		
	</div>
</div>


<%- include ("../partials/footer") %>
