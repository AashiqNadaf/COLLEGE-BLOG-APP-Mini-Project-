<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Student</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/user/<%= user._id %>/students" method="POST">
				<div class="form-group">
                    <label>First name of Student</label>
					<input class="form-control" type="text" name="student[firstName]" placeholder="text" required>
                </div>
                <div class="form-group">
                    <label>Last name of Student</label>
					<input class="form-control" type="text" name="student[lastName]" placeholder="text">
                </div>
                <div class="form-group">
                    <label>Father's name of Student</label>
					<input class="form-control" type="text" name="student[fatherName]" placeholder="text">
                </div>
                <div class="form-group">
                    <label>Mother's name of Student</label>
					<input class="form-control" type="text" name="student[motherName]" placeholder="text">
                </div>
                <div class="form-group">
                    <label>Year of joining</label>
					<input class="form-control" type="text" name="student[yearOfJoining]" placeholder="text" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				</form>
			<a href="/user">Go back</a>
		</div>
		
	</div>
</div>


<%- include ("../partials/footer") %>
